{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "include": ["./src/**/*"],
    "exclude": ["node_modules"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true
  }
}